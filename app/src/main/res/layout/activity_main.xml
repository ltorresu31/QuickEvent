<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Quick Event"
        android:id="@+id/txtQE"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp"
        android:textSize="48dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etxUser"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/txtQE"
        android:layout_alignStart="@+id/txtQE"
        android:text="Correo Electronico"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etxPass"
        android:layout_below="@+id/etxUser"
        android:layout_alignStart="@+id/etxUser"
        android:layout_alignEnd="@+id/etxUser"
        android:text="Contraseña" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="¿Eres usuario nuevo?"
        android:id="@+id/txtUsNuevo"
        android:layout_marginTop="40dp"
        android:textSize="28dp"
        android:layout_below="@+id/btnIngresar"
        android:layout_alignEnd="@+id/etxPass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrate"
        android:id="@+id/btnRegistrar"
        android:layout_below="@+id/txtUsNuevo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:id="@+id/btnIngresar"
        android:layout_below="@+id/etxPass"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
